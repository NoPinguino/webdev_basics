{
  "type": "module",
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "npm": "^11.6.4",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.13.0",
    "serve": "^14.2.5",
    "tailwindcss": "^3.4.18"
  },
  "scripts": {
    "build": "tailwindcss -i ./src/input.css -o ./src/output.css",
    "watch": "tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "serve": "browser-sync start --server src --files 'src/**/*'",
    "dev": "npm-run-all --parallel watch serve"
  }
}
